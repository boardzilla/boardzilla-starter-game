{
  "minPlayers": 1,
  "maxPlayers": 4,
  "ui": {
    "root": ".",
    "build": {
      "dev": [
        "npm run tsc",
        "npm run build:ui"
      ],
      "prod": [
        "npm run tsc",
        "npm run build:ui:prod"
      ]
    },
    "watchPaths": [
      "src/ui",
      "src/game"
    ],
    "outDir": "build/ui"
  },
  "game": {
    "root": ".",
    "build": {
      "dev": [
        "npm run tsc",
        "npm run build:game"
      ],
      "prod": [
        "npm run tsc",
        "npm run build:game:prod"
      ]
    },
    "watchPaths": [
      "src/game"
    ],
    "out": "build/game/game-interface.js"
  }
}
