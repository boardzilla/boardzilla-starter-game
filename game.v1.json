{
  "name": "your-game",
  "friendlyName": "Your Game",
  "description": "",
  "minPlayers": 1,
  "maxPlayers": 4,
  "image": "image.jpg",
  "ui": {
    "root": ".",
    "build": {
      "dev": "npm run build:ui",
      "prod": "npm run build:ui:prod"
    },
    "watchPaths": [
      "node_modules/@boardzilla/core/game",
      "node_modules/@boardzilla/core/ui",
      "src/ui",
      "src/game"
    ],
    "outDir": "build/ui"
  },
  "game": {
    "root": ".",
    "build": {
      "dev": "npm run build:game",
      "prod": "npm run build:game:prod"
    },
    "watchPaths": [
      "node_modules/@boardzilla/core/game",
      "src/game"
    ],
    "out": "game/build/game-interface.js"
  }
}
