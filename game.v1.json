{
  "minPlayers": 1,
  "maxPlayers": 4,
  "ui": {
    "root": ".",
    "build": {
      "dev": "npm run build:ui",
      "prod": "npm run build:ui:prod"
    },
    "watchPaths": [
      "src/ui",
      "src/game"
    ],
    "outDir": "build/ui"
  },
  "game": {
    "root": ".",
    "build": {
      "dev": "npm run build:game",
      "prod": "npm run build:game:prod"
    },
    "watchPaths": [
      "src/game"
    ],
    "out": "build/game/game-interface.js"
  }
}
